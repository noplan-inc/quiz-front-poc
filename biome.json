{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "error"
      },
      "style": {
        "useTemplate": "error"
      },
      "nursery": {
        "recommended": false
      }
    },
    "ignore": [
      "node_modules",
      "coverage",
      "dist",
      "dist-ssr",
      "*.json",
      "*.md",
      "*.css",
      "vite.config.js",
      "vite.config.d.ts",
      "vite.config.d.ts.map",
      "tsconfig.tsbuildinfo"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 100,
    "include": ["src/**/*.{ts,tsx,js,jsx}"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  }
}
